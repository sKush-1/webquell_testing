{
  "builds": [
    {
      "src": "robots.txt",
      "use": "@vercel/static"
    },
    {
      "src": "html/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/privacy-policy",
      "dest": "/html/privacy-policy.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/terms-and-conditions",
      "dest": "/html/terms-and-conditions.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/html/index.html"
    }
  ]
}
